#!/bin/bash

## Thunar에서 특정 파일을 선택한 뒤 오른쪽 버튼 클릭했을 때,
## 보내기 메뉴에서 메일 수신자 항목이 보임

TARGET_DIR=/usr/share/debian-system-adjustments/removed-thunar-menu-entries
DESKTOP_FILE=/usr/share/Thunar/sendto/thunar-sendto-email.desktop

if [ ! -e $TARGET_DIR ]; then
  mkdir -p $TARGET_DIR
fi

if [ -e $DESKTOP_FILE ]; then
  mv $DESKTOP_FILE $TARGET_DIR
fi
